@model IEnumerable<EliteGym.Models.Facility>

@{
    ViewBag.Title = "Facilities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Facilities</h2>

<p>
    @Html.ActionLink("Add a new facility", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FacilityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FacilityName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrainerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ScheduleDay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ScheduleHour)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
