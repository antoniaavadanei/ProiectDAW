@model IEnumerable<EliteGym.Models.Membership>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of prices for every facility, depending on the duration of access.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MembershipDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MembershipDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MembershipPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
